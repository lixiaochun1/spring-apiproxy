<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- the test application context definition for the jdbc based tests -->

	<bean id="serverInfoDao" class="name.skitazaki.apiproxy.repository.JdbcServerInfoDao">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource"
		p:driverClassName="${jdbc.driverClassName}" p:url="${jdbc.url}"
		p:username="${jdbc.username}" p:password="${jdbc.password}" />

	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
		p:location="classpath:jdbc.properties" />

	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
		p:dataSource-ref="dataSource" />

	<bean id="testManager" class="name.skitazaki.apiproxy.service.DummyServerInfoManager">
		<property name="configurations">
			<list>
				<ref bean="config1" />
				<ref bean="config2" />
			</list>
		</property>
	</bean>

	<bean id="config1" class="name.skitazaki.apiproxy.model.ServerInfo"
		p:name="solr" p:url="http://localhost:8983/solr" />

	<bean id="config2" class="name.skitazaki.apiproxy.model.ServerInfo"
		p:name="python" p:url="http://localhost:8000" />

</beans>
